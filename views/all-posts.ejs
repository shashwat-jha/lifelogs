<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            flex-direction: column;
        }
        .post {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            padding: 20px;
            margin-bottom: 20px;
            width: 100%;
            max-width: 800px;
        }
        .post h2 {
            margin-top: 0;
            font-size: 24px;
            color: #333;
        }
        .post p {
            font-size: 18px;
            color: #555;
        }
        .post .author {
            font-size: 14px;
            color: #999;
            margin-top: 10px;
        }
        .post .author img {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            vertical-align: middle;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <h1>All Posts</h1>
    <% if (posts && posts.length > 0) { %>
        <% posts.forEach(post => { %>
            <div class="post">
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
                <div class="author">
                    <% if (post.userId.profilePic) { %>
                        <img src="<%= post.userId.profilePic %>" alt="Profile Picture">
                    <% } %>
                    Posted by: <%= post.userId.username %>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <p>No posts available.</p>
    <% } %>
</body>
</html>
